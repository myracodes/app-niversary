<div class="banner-gifts-list">
    <img src="/img/blue-banner.jpg" alt="banner" id="banner">

    <div>
        <h1 class="title-gifts-list"> EDIT BIRTHDAY</h1>
    </div>
    </div>

    <div class="welcome-message">
        
<div id="create-birthday-form">
    <form action="/birthday/{{birthday.id}}/edit" method="POST" enctype="multipart/form-data">
        <div class="form-div">
            <label for="friendName">Name</label>
            <input name="friendName" id="friendName" type="text" value="{{birthday.friendName}}">
        </div>
        <div class="form-div">
            <label for="friendLastName">Last name</label>
            <input name="friendLastName" id="friendLastName" type="text" value="{{birthday.friendLastName}}">
        </div>
        <div id="birthday">
            <p>Birthday date</p>
            <span>
                <label for="day"></label>
                <input name="birthdayDay" type="number" min="1" max="31" value="{{birthday.birthdayDay}}">
            </span>
            <span>
                <label for="month"></label>
                <input name="birthdayMonth" type="number" min="1" max="12" value="{{birthday.birthdayMonth}}">
            </span>
            <span>
                <label for="year"></label>
                <input name="birthdayYear" type="number" min="1900" max="2050" value="{{birthday.birthdayYear}}">
                </select>
            </span>
        </div>
        <div class="form-div">
            <label for="picture">Picture</label>
            <input name="picture" id="picture" type="file">
        </div>
        {{!-- <div>
            <label for="gift">Gift(s)</label>
            <select name="gift" id="gift"></select>
            <option value="-1">Choose a gift</option>
        </div> --}}
        <div>
            <label for="existing-gifts">Current Gift(s)</label>
            {{#each birthday.gifts}}
            <p> {{this.name}}</p>
            {{/each}}
        </div>

        <div>
            <select name="gifts" id="select-gifts" multiple>
                {{#each allGifts}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{!-- <div>
                    <input type="checkbox" id="{{this.name}}" name="{{this.name}}" checked>
                    <label for="{{this.name}}">{{this.name}}</label>
                </div> --}}
                {{/each}}
            </select>
        </div>



        <button class="button">
            SAVE
        </button>
    </form>
</div>

</div>