<h1>Here are all my birthdays!</h1>

<div class="my-birthdays">
    <ul class="birthdays-list">
        {{#each birthdays}}
        <h5>{{this.friendName}}'s birthday info</h5>
        <li>
            <span class="one-birthday">
                <ul class="individual-birthday">
                    <li>
                        <p>
                            <b>Name: </b>
                            {{this.friendName}}
                        </p>
                    </li>
                    <li>
                        <p>
                            <b>Last name: </b>
                            {{this.friendLastName}}
                        </p>
                    </li>
                    <li>
                        <p>
                            <b>Birthday: </b>
                            {{this.birthday}}
                        </p>
                    </li>
                    {{!-- {{#if this.picture}} --}}
                    <li>
                        <p>
                            <b>Picture: </b>
                            <img class="birthday-picture" src="{{this.picture}}" alt="friend ficture">

                        </p>
                    </li>
                    {{!-- {{/if}} --}}
                    
                      {{!-- <li>
                        
                            <b> Gifts: </b>
                            {{#each gifts}}
                            {{#each this}}

                               {{this.name}}<br>
                               {{this.price}}


                            {{/each}}
                            {{/each}}
                        </li> --}}
                    
                </ul>
            </span>
            <form action="/birthday/details/{{this.id}}" method="GET">
                <button>See details</button>
            </form>

            <form action="/birthday/{{this.id}}/edit" method="GET">
                <button>Edit</button>
            </form>
            <form action="/birthday/{{this.id}}/delete" method="POST">
                <button>Delete</button>
            </form>
        </li>
        {{/each}}
    </ul>
</div>