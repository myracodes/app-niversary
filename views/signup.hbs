<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Create your App-niversary account</h1>
    <p class="form-subtitle">Please fill in your account information:</p>
  </header>
  {{#if msg}}
  <p class="message {{msg.status}}">{{msg.text}}</p>
  {{/if}}
  <form method="post" action="/signup" id="form_user" enctype="multipart/form-data">
    <div class="form-item-wrapper flexed-item">
      <label for="firstname" class="label-ref label">Name</label>
      <input name="name" id="name" type="text" class="input-text input" placeholder="" required value="">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="lastname" class="label-ref label">Last Name</label>
      <input 
     name="lastname" id="lastname" type="text" class="input-text input" placeholder="" required value="">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input 
     name="email" id="email" type="email" class="input-text input" placeholder="" required value="">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input name="password" id="password" type="password" class="input-text input" placeholder="" required value="">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="profile-picture" class="label-ref label">Profile picture (optional)</label>
      <input type="file" name="picture" id="profile-picture" />
    </div>
    <button class="button-primary white">Create Account</button>
  </form>
  <p class="form-sub-infos">Already have an account ? <a href="/signin" class="button-link-form">Sign In</a></p>
</section>